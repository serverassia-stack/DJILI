#!/usr/bin/env python3
# -*- coding: utf-8 -*-


"""
إعدادات بناء مدير الاشتراكات المتقدم
"""


from setuptools import setup, find_packages
import sys
import os


# الحصول على المسار الحالي
current_dir = os.path.dirname(os.path.abspath(__file__))


def read_requirements():
    """قراءة متطلبات التثبيت من ملف requirements.txt"""
    try:
        with open(os.path.join(current_dir, 'requirements.txt'), 'r', encoding='utf-8') as f:
            return [line.strip() for line in f if line.strip() and not line.startswith('#')]
    except FileNotFoundError:
        return []


def read_version():
    """قراءة رقم الإصدار من ملف version.json"""
    try:
        import json
        with open(os.path.join(current_dir, 'version.json'), 'r', encoding='utf-8') as f:
            version_data = json.load(f)
            return version_data.get('version', '2.0.0')
    except:
        return '2.0.0'


setup(
    name="مدير الاشتراكات المتقدم",
    version=read_version(),
    description="نظام متكامل لإدارة الاشتراكات والمدفوعات الدورية",
    long_description="""
مدير الاشتراكات المتقدم - نظام متكامل لإدارة جميع اشتراكاتك في مكان واحد


المميزات:
✅ إدارة كاملة للاشتراكات
📊 تقارير وإحصائيات متقدمة
🔔 نظام تنبيهات ذكي
💾 نسخ احتياطي تلقائي
📤 تصدير البيانات بمختلف الصيغ
🎯 واجهة مستخدم عربية بدعم كامل


يدعم البرنامج جميع أنواع الاشتراكات:
- خدمات البث (نيتفليكس، يوتيوب بريميوم، إلخ)
- البرامج والخدمات السحابية
- الاشتراكات الشهرية والسنوية
- وأكثر بكثير...
""",
    author="فريق تطوير مدير الاشتراكات",
    author_email="support@subscriptionmanager.com",
    url="https://github.com/yourusername/subscription-manager",
    packages=find_packages(),
    package_data={
        '': ['*.ico', '*.json', '*.txt', '*.md']
    },
    install_requires=read_requirements(),
    classifiers=[
        'Development Status :: 5 - Production/Stable',
        'Intended Audience :: End Users/Desktop',
        'Topic :: Office/Business :: Financial',
        'License :: OSI Approved :: MIT License',
        'Programming Language :: Python :: 3',
        'Programming Language :: Python :: 3.6',
        'Programming Language :: Python :: 3.7',
        'Programming Language :: Python :: 3.8',
        'Programming Language :: Python :: 3.9',
        'Programming Language :: Python :: 3.10',
        'Operating System :: Microsoft :: Windows',
        'Operating System :: POSIX :: Linux',
        'Operating System :: MacOS',
    ],
    python_requires='>=3.6',
    entry_points={
        'console_scripts': [
            'subscription-manager=main:main',
        ],
    },
    keywords='subscriptions, manager, finance, arabic, english, management',
    project_urls={
        'Documentation': 'https://github.com/yourusername/subscription-manager/docs',
        'Source': 'https://github.com/yourusername/subscription-manager',
        'Tracker': 'https://github.com/yourusername/subscription-manager/issues',
    },
)


print("=" * 60)
print("✅ تم تحميل إعدادات البناء بنجاح!")
print("📦 لبناء التطبيق، قم بتشغيل:")
print("   python setup.py build")
print("🚀 أو لتثبيت التطبيق:")
print("   pip install .")
print("=" * 60)
